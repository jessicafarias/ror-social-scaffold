<h1> My confirmed friends</h1>
  <section class="users-section">
  <ul class="users-list">
    <% @users.each do |user| %>
      <li>
        Name: <%= user.name %>
        ID : <%= user.id %>
        <br>
        <span class="profile-link">       
          <%= button_to 'See Profile', user_path(user), method: 'get', class: 'profile-link' %>
        </span>
        <p>Friendship Status: </p>
        <% if current_user.invitee?(user) && !user.friend?(current_user) %>
          <span class="profile-link">
            <%= button_to 'Accept', "/friendships/#{user.id}", method: 'put', class: 'profile-link' %>
          </span>
          <span class="profile-link">
            <%= button_to 'Decline', "/friendships/#{user.id}", method: 'delete', class: 'profile-link' %>
          </span>        
        <% elsif current_user.requested_friend?(user) && !user.friend?(current_user) %>
          <p>Invite Pending</p>
        <% elsif !user.friend?(current_user) %>
          <span class="profile-link">
            <%= button_to 'Add Friend', "/adding/#{user.id}", method: 'get', class: 'fa fa-check purple event_title mr-2 profile-link' %>
          </span>
        <% else %>
        <!-- When Friendship Confirmed -->
        <span class="profile-link">
          <%= button_to 'Delete', "/friendships/#{user.id}", method: 'delete', class: 'profile-link' %>
        </span>
        <% end %>
      </li>
    <% end %>
  </ul>
</section>
